<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/testlisttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科目"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/testitemlesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:ems="10" />

        <Spinner
            android:id="@+id/spinTestitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
		/>

        <TextView
            android:id="@+id/lessonclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/testitemday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:onClick="chooseDate" />

        <TextView
            android:id="@+id/lessonteacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/testitemtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:onClick="chooseTime"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/backtestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:text="返回" />

            <Button
                android:id="@+id/savetestitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:onClick="save"
                android:text="保存" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>